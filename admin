    <script>
        lucide.createIcons();

        // Check Session on Load
        if(localStorage.getItem('adminSession') === 'true') {
            document.getElementById('loginOverlay').classList.add('hidden');
            document.getElementById('adminContent').classList.remove('hidden');
            loadReceipts();
            loadProducts();
            loadConfig();
            loadRules();
            loadWinners();
        }

        // Auth Logic
        function handleLogin(e) {
            e.preventDefault();
            const email = document.getElementById('email').value;
            const pass = document.getElementById('password').value;

            if(email === 'bs4796085@gmail.com' && pass === 'bapan2735G') {
                localStorage.setItem('adminSession', 'true');
                document.getElementById('loginOverlay').classList.add('hidden');
                document.getElementById('adminContent').classList.remove('hidden');
                loadReceipts();
                loadProducts();
                loadConfig();
                loadRules();
                loadWinners();
            } else {
                alert('Invalid Credentials');
            }
        }

        function logout() {
            localStorage.removeItem('adminSession');
            location.reload();
        }

        // --- INSTANT UPDATES ---
        window.addEventListener('storage', (e) => {
            if (e.key === 'adminReceipts') {
                loadReceipts();
            }
        });

        // Data Logic
        function loadReceipts() {
            const receipts = JSON.parse(localStorage.getItem('adminReceipts') || '[]');
            const tbody = document.getElementById('receiptsTableBody');
            const empty = document.getElementById('emptyState');
            
            document.getElementById('totalReceipts').innerText = receipts.length;
            document.getElementById('pendingCount').innerText = receipts.filter(r => r.status === 'Pending').length;

            tbody.innerHTML = '';
            if(receipts.length === 0) {
                empty.classList.remove('hidden');
                return;
            }
            empty.classList.add('hidden');

            receipts.forEach((r, index) => {
                const row = `
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="p-4 font-mono text-xs text-gray-500">${r.id}</td>
                        <td class="p-4">${r.date}</td>
                        <td class="p-4 font-bold text-white">${r.ign}</td>
                        <td class="p-4">${r.product}</td>
                        <td class="p-4 text-green-400">${r.amount}</td>
                        <td class="p-4"><span class="px-2 py-1 rounded text-[10px] font-bold uppercase ${r.status === 'Pending' ? 'bg-yellow-500/10 text-yellow-500' : 'bg-green-500/10 text-green-500'}">${r.status}</span></td>
                        <td class="p-4 text-right">
                            ${r.status === 'Pending' ? `<button onclick="markCleared(${index})" class="text-xs text-blue-400 hover:underline font-bold">ACCEPT DUE</button>` : '<span class="text-gray-600 text-xs">Completed</span>'}
                        </td>
                    </tr>
                `;
                tbody.innerHTML += row;
            });
        }

        function clearReceipts() {
            if(confirm('Are you sure you want to delete all receipts?')) {
                localStorage.removeItem('adminReceipts');
                loadReceipts();
            }
        }

        function markCleared(index) {
            const receipts = JSON.parse(localStorage.getItem('adminReceipts') || '[]');
            if(receipts[index]) {
                receipts[index].status = 'Cleared';
                localStorage.setItem('adminReceipts', JSON.stringify(receipts));
                loadReceipts();
            }
        }

        // --- CONFIG LOGIC ---
        function loadConfig() {
            const config = JSON.parse(localStorage.getItem('siteConfig') || '{"sg":"play.atheronsmp.fun:25570", "ae":"uae.atheronsmp.fun:3194", "discord":"https://discord.gg/xnmKmfsggt"}');
            document.getElementById('configIpSG').value = config.sg;
            document.getElementById('configIpAE').value = config.ae;
            document.getElementById('configDiscord').value = config.discord || "https://discord.gg/xnmKmfsggt";
        }

        function saveConfig() {
            const sg = document.getElementById('configIpSG').value;
            const ae = document.getElementById('configIpAE').value;
            const discord = document.getElementById('configDiscord').value;
            localStorage.setItem('siteConfig', JSON.stringify({ sg, ae, discord }));
            alert('IPs Updated! Refresh the main website to see changes.');
        }

        // --- STORE EDITOR LOGIC ---
        function loadProducts() {
            const products = JSON.parse(localStorage.getItem('storeProducts') || '[]');
            const list = document.getElementById('productList');
            list.innerHTML = '';

            if(products.length === 0) {
                list.innerHTML = '<div class="text-gray-500 text-xs text-center py-4">No products in store.</div>';
                return;
            }

            products.forEach((p, index) => {
                const item = `
                    <div class="flex items-center justify-between bg-[#15151a] p-3 rounded-lg border border-white/5">
                        <div>
                            <div class="font-bold text-white text-sm">${p.name}</div>
                            <div class="text-[10px] text-gray-500">$${p.prices.USD} • ₹${p.prices.INR} • ₱${p.prices.PHP}</div>
                        </div>
                        <div class="flex gap-1">
                            <button onclick="editProduct(${index})" class="text-blue-400 hover:text-blue-300 p-2"><i data-lucide="edit" class="w-4 h-4"></i></button>
                            <button onclick="deleteProduct(${index})" class="text-red-500 hover:text-red-400 p-2"><i data-lucide="trash-2" class="w-4 h-4"></i></button>
                        </div>
                    </div>
                `;
                list.innerHTML += item;
            });
            lucide.createIcons();
        }

        function saveProduct(e) {
            e.preventDefault();
            const editIndex = parseInt(document.getElementById('editIndex').value);
            const name = document.getElementById('prodName').value;
            const category = document.getElementById('prodCategory').value;
            const usd = document.getElementById('prodPriceUSD').value;
            const inr = document.getElementById('prodPriceINR').value;
            const php = document.getElementById('prodPricePHP').value;
            const tag = document.getElementById('prodTag').value;
            const color = document.getElementById('prodColor').value;
            const features = document.getElementById('prodFeatures').value.split('\n').filter(f => f.trim() !== '');
            const isBogo = document.getElementById('prodBogo').checked;

            const newProduct = {
                id: editIndex >= 0 ? JSON.parse(localStorage.getItem('storeProducts'))[editIndex].id : 'prod_' + Date.now(),
                name,
                category,
                prices: { USD: usd, INR: inr, PHP: php },
                tag,
                color,
                features,
                isBogo,
                highlight: color === 'yellow' // Auto highlight yellow items
            };

            const products = JSON.parse(localStorage.getItem('storeProducts') || '[]');
            
            if(editIndex >= 0) {
                products[editIndex] = newProduct;
                document.getElementById('editIndex').value = "-1";
                document.getElementById('saveProdBtn').innerText = "ADD PRODUCT";
                document.getElementById('saveProdBtn').classList.remove('bg-green-600', 'hover:bg-green-700');
                document.getElementById('saveProdBtn').classList.add('bg-blue-600', 'hover:bg-blue-700');
            } else {
                products.push(newProduct);
            }
            
            localStorage.setItem('storeProducts', JSON.stringify(products));
            
            e.target.reset();
            loadProducts();
            alert(editIndex >= 0 ? 'Product Updated!' : 'Product Added!');
        }

        function editProduct(index) {
            const products = JSON.parse(localStorage.getItem('storeProducts') || '[]');
            const p = products[index];
            document.getElementById('editIndex').value = index;
            document.getElementById('prodName').value = p.name;
            document.getElementById('prodCategory').value = p.category || 'ranks';
            document.getElementById('prodPriceUSD').value = p.prices.USD;
            document.getElementById('prodPriceINR').value = p.prices.INR;
            document.getElementById('prodPricePHP').value = p.prices.PHP;
            document.getElementById('prodTag').value = p.tag;
            document.getElementById('prodColor').value = p.color;
            document.getElementById('prodFeatures').value = p.features.join('\n');
            document.getElementById('prodBogo').checked = p.isBogo || false;
            
            const btn = document.getElementById('saveProdBtn');
            btn.innerText = "UPDATE PRODUCT";
            btn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
            btn.classList.add('bg-green-600', 'hover:bg-green-700');
        }

        function deleteProduct(index) {
            if(confirm('Delete this product?')) {
                const products = JSON.parse(localStorage.getItem('storeProducts') || '[]');
                products.splice(index, 1);
                localStorage.setItem('storeProducts', JSON.stringify(products));
                loadProducts();
            }
        }

        // --- RULES LOGIC ---
        function loadRules() {
            const rules = JSON.parse(localStorage.getItem('siteRules') || '[]');
            const list = document.getElementById('rulesList');
            list.innerHTML = '';
            rules.forEach((r, index) => {
                list.innerHTML += `
                    <div class="flex items-center justify-between bg-[#15151a] p-3 rounded-lg border border-white/5">
                        <div class="text-white text-sm font-bold">${r.title}</div>
                        <div class="flex gap-1">
                            <button onclick="editRule(${index})" class="text-blue-400 p-2"><i data-lucide="edit" class="w-4 h-4"></i></button>
                            <button onclick="deleteRule(${index})" class="text-red-500 p-2"><i data-lucide="trash-2" class="w-4 h-4"></i></button>
                        </div>
                    </div>`;
            });
            lucide.createIcons();
        }

        function saveRule(e) {
            e.preventDefault();
            const index = parseInt(document.getElementById('editRuleIndex').value);
            const title = document.getElementById('ruleTitle').value;
            const icon = document.getElementById('ruleIcon').value || 'shield';
            const points = document.getElementById('rulePoints').value.split('\n').filter(l => l.trim() !== '');
            
            const rules = JSON.parse(localStorage.getItem('siteRules') || '[]');
            const newRule = { title, icon, points };
            
            if(index >= 0) rules[index] = newRule;
            else rules.push(newRule);
            
            localStorage.setItem('siteRules', JSON.stringify(rules));
            e.target.reset();
            document.getElementById('editRuleIndex').value = "-1";
            document.getElementById('saveRuleBtn').innerText = "ADD RULE";
            loadRules();
        }

        function editRule(index) {
            const rules = JSON.parse(localStorage.getItem('siteRules') || '[]');
            const r = rules[index];
            document.getElementById('editRuleIndex').value = index;
            document.getElementById('ruleTitle').value = r.title;
            document.getElementById('ruleIcon').value = r.icon;
            document.getElementById('rulePoints').value = r.points.join('\n');
            document.getElementById('saveRuleBtn').innerText = "UPDATE RULE";
        }

        function deleteRule(index) {
            if(confirm('Delete rule?')) {
                const rules = JSON.parse(localStorage.getItem('siteRules') || '[]');
                rules.splice(index, 1);
                localStorage.setItem('siteRules', JSON.stringify(rules));
                loadRules();
            }
        }

        // --- WINNERS LOGIC ---
        function loadWinners() {
            const winners = JSON.parse(localStorage.getItem('siteWinners') || '[]');
            const list = document.getElementById('winnersList');
            list.innerHTML = '';
            winners.forEach((w, index) => {
                list.innerHTML += `
                    <div class="flex items-center justify-between bg-[#15151a] p-3 rounded-lg border border-white/5">
                        <div>
                            <div class="text-white text-sm font-bold">${w.season}</div>
                            <div class="text-[10px] text-gray-500">${w.team} - ${w.player}</div>
                        </div>
                        <div class="flex gap-1">
                            <button onclick="editWinner(${index})" class="text-blue-400 p-2"><i data-lucide="edit" class="w-4 h-4"></i></button>
                            <button onclick="deleteWinner(${index})" class="text-red-500 p-2"><i data-lucide="trash-2" class="w-4 h-4"></i></button>
                        </div>
                    </div>`;
            });
            lucide.createIcons();
        }

        function saveWinner(e) {
            e.preventDefault();
            const index = parseInt(document.getElementById('editWinnerIndex').value);
            const season = document.getElementById('winnerSeason').value;
            const team = document.getElementById('winnerTeam').value;
            const player = document.getElementById('winnerPlayer').value;
            
            const winners = JSON.parse(localStorage.getItem('siteWinners') || '[]');
            const newWinner = { season, team, player };
            
            if(index >= 0) winners[index] = newWinner;
            else winners.push(newWinner);
            
            localStorage.setItem('siteWinners', JSON.stringify(winners));
            e.target.reset();
            document.getElementById('editWinnerIndex').value = "-1";
            document.getElementById('saveWinnerBtn').innerText = "ADD WINNER";
            loadWinners();
        }

        function editWinner(index) {
            const winners = JSON.parse(localStorage.getItem('siteWinners') || '[]');
            const w = winners[index];
            document.getElementById('editWinnerIndex').value = index;
            document.getElementById('winnerSeason').value = w.season;
            document.getElementById('winnerTeam').value = w.team;
            document.getElementById('winnerPlayer').value = w.player;
            document.getElementById('saveWinnerBtn').innerText = "UPDATE WINNER";
        }

        function deleteWinner(index) {
            if(confirm('Delete winner?')) {
                const winners = JSON.parse(localStorage.getItem('siteWinners') || '[]');
                winners.splice(index, 1);
                localStorage.setItem('siteWinners', JSON.stringify(winners));
                loadWinners();
            }
        }
    </script>
</body>
</html>
